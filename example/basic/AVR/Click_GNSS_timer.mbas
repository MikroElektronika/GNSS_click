module Click_GNSS_timer

include Click_GNSS_types
dim
    timerCounter as uint32_t 
    
sub procedure Timer_interrupt() org IVT_ADDR_TIMER1_COMPA
sub procedure gnss_configTimer() 

implements

sub procedure gnss_configTimer() 
    SREG_I_bit = 1 
    TCCR1A = 0x80 
    TCCR1B = 0x09 
    OCR1AH = 0x1F 
    OCR1AL = 0x3F 
    OCIE1A_bit = 1 
end sub

sub procedure Timer_interrupt() org IVT_ADDR_TIMER1_COMPA
    gnss_tick() 
    inc(timerCounter)
end sub

end.