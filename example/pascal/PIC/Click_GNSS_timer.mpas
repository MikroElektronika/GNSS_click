unit Click_GNSS_timer;

uses Click_GNSS_types;

var
    timerCounter : uint32_t; 
    
procedure Interrupt(); 
procedure gnss_configTimer(); 

implementation

procedure gnss_configTimer(); 
begin
    T1CON := 0x01; 
    TMR1IF_bit := 0; 
    TMR1H := 0xC1; 
    TMR1L := 0x80; 
    TMR1IE_bit := 1; 
    INTCON := 0xC0; 
end;

procedure Interrupt(); 
begin
    if (TMR1IF_bit <> 0) then 
    begin
        TMR1IF_bit := 0; 
        TMR1H := 0xC1; 
        TMR1L := 0x80; 
        gnss_tick(); 
        inc(timerCounter);
    end; 
end;

end.