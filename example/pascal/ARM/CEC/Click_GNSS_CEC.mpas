{*
Example for GNSS Click

    Date          : Nov 2017.
    Author        : MikroE Team

Test configuration CEC :
    
    MCU              : CEC1302
    Dev. Board       : Clicker 2 for CEC1302
    ARM Compiler ver : v6.1.0.0

---

Description :

The application is composed of three sections :

- System Initialization - Initializes all necessary GPIO pins, UART used for
the communcation with GSM module and UART used for infromation logging
- Application Initialization - Initializes driver, power on module and sends few
command for the default module configuration
- Application Task - running in parallel core state machine and checks for call flag. 
If call detected parser will hang up call.

Additional Functions :

All additional functions such as timer initialization and default handler. 

Notes :

- Echo must be turned off for succefull parsing. ( ATE0 )
- UART polling works much better with HFC enabled.
- In case of usage of other MCUs Timer initialization must be adjusted according to your MCU.

*}
program Click_GNSS_CEC;

uses Click_GNSS_types, Click_GNSS_config, Click_GNSS_timer;

var
    // COMMANDS
    GNSS_AT : string[3];
    GNSS_HANGUP : string[4];
    GNSS_ECHO_OFF : string[5];
    GNSS_FORMAT_DEFAULT : string[10];
    GNSS_HFC_ENABLE : string[11];

    // CALLER FLAG
    callFlag : uint8_t; 

procedure gnss_default_handler(rsp : ^uint8_t; evArgs : ^uint8_t);
var
    ptr_rsp  : ^char;

begin
    ptr_rsp := rsp + 2;

    if (ptr_rsp^ = 82) then
    begin
        callFlag := 1; 
    end; 

    mikrobus_logWrite( ptr_rsp - 2, _LOG_TEXT );

end;


procedure systemInit(); 
begin
    GNSS_AT := 'AT';
    GNSS_HANGUP := 'ATH';
    GNSS_ECHO_OFF := 'ATE0';
    GNSS_FORMAT_DEFAULT := 'AT+CMGF=1';
    GNSS_HFC_ENABLE := 'AT+IFC=2,2';

    callFlag := 0;

    mikrobus_gpioInit( _MIKROBUS1, _MIKROBUS_AN_PIN, _GPIO_INPUT );
    mikrobus_gpioInit( _MIKROBUS1, _MIKROBUS_PWM_PIN, _GPIO_INPUT );
    mikrobus_gpioInit( _MIKROBUS1, _MIKROBUS_INT_PIN, _GPIO_INPUT );
    mikrobus_gpioInit( _MIKROBUS1, _MIKROBUS_RST_PIN, _GPIO_OUTPUT );
    mikrobus_gpioInit( _MIKROBUS1, _MIKROBUS_CS_PIN, _GPIO_OUTPUT );    
    mikrobus_uartInit(_MIKROBUS1, @_GNSS_UART_CFG[0]); 
    mikrobus_logInit(_MIKROBUS2, 9600); 

end;

procedure applicationInit(); 
begin

// TIMER INIT
    gnss_configTimer();  

// DRIVER INIT
    gnss_uartDriverInit(T_GNSS_P(@_MIKROBUS1_GPIO), T_GNSS_P(@_MIKROBUS1_UART)); 
    gnss_coreInit(@gnss_default_handler, 1500);

// MODULE POWER ON
    gnss_hfcEnable(true); 
    gnss_modulePower(true); 

// MODULE INIT
    gnss_cmdSingle(@GNSS_AT[0]); 
    gnss_cmdSingle(@GNSS_AT[0]); 
    gnss_cmdSingle(@GNSS_AT[0]); 
    gnss_cmdSingle(@GNSS_ECHO_OFF[0]); 
    gnss_cmdSingle(@GNSS_HFC_ENABLE[0]); 
    gnss_cmdSingle(@GNSS_FORMAT_DEFAULT[0]); 

end;

procedure applicationTask(); 
begin

    gnss_process(); 

    if ((0 <> callFlag)) then 
    begin
        gnss_cmdSingle(@GNSS_HANGUP[0]); 
        Delay_ms(3000); 

        callFlag := 0; 
    end;
end;

begin

    systemInit(); 
    applicationInit(); 
    while (1) do 
    begin 
        applicationTask(); 
    end;

end.